  "devDependencies": {
    "@lambocreeper/mock-discord.js": "^2.0.1",
    "@types/chai": "^4.3.0",
    "@types/gifencoder": "^2.0.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.6",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "chai": "^4.3.4",
